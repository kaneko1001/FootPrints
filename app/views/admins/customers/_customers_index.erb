<div class="card shadow-lg px-3 py-3">
  <% @customers.each do |customer| %>
    <% unless customer == current_customer %>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= link_to image_tag(customer.get_profile_image(120, 120)), admins_customer_path(customer) %>
            </div>
            <div class="col-8">
              <h5><%= link_to customer.name, admins_customer_path(customer.id) %></h5>
              <p><%= customer.introduction %></p>
            </div>
            <div class="col-2 d-flex align-items-center">
              <% if customer.is_deleted %>
                <%= link_to "退会", edit_admins_customer_path(customer), class: "btn btn-danger" %>
              <% else %>
                <%= link_to "利用中", edit_admins_customer_path(customer), class: "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= paginate @customers %>
</div>