<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-lg px-3 py-3 text-center">
        <h2>投稿詳細</h2>
      </div>
      <div class="card shadow-lg px-3 py-3">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-12 col-lg-8">
              <h5><%= @post.title %></h5>
              <div class="row">
                <div class="col-8">
                  <p>
                    <i class="far fa-calendar-alt"></i>
                    <%= @post.trip_duration[:days] %>日間
                    <%= @post.formatted_departure_date %> から <%= @post.formatted_return_date %>
                  </p>
                </div>
                <div class="col-12">
                  <div class="row">
                    <div class="col-10">
                      <div class="btn-group" role="group">
                        <%= link_to "旅行を削除", admins_post_path, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <% if @post.images.attached? %>
          <% @post.images.each do |image| %>
            <div class="col-4" style="padding-top: 10px; padding-bottom: 10px;">
              <%= image_tag image, width: 300, height: 200 %>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= render 'admins/comments/post_comments',post_comment: @post_comment, post: @post %>
    </div>
  </div>
</div>