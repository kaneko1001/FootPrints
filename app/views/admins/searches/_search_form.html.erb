  <div class="d-flex align-items-center ml-auto">
    <%= form_with url: admins_search_path, method: :get, class: "search_form" do |f| %>
      <%= f.text_field :content, class: "form-control mr-2", placeholder: "検索キーワード" %>
      <%= f.hidden_field :range, value: 'Both' %>
      <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>