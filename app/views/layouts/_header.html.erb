<header class="d-flex flex-column">
  <div class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info navbar-fixed-top">
      <div class="container">
        <% if admin_signed_in? %>
          <%= link_to admin_root_path do %>
            <%= image_tag('logo.png', class: 'logo-image', style: 'width: 200px;') %>
          <% end %>
        <% else %>
          <%= link_to root_path do %>
            <%= image_tag('logo.png', class: 'logo-image', style: 'width: 200px;') %>
          <% end %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to my_page_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-user"></i>マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_post_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-edit"></i>新規投稿
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to posts_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-plane-departure"></i>投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to customers_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-users"></i>ユーザー一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_customer_session, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-link"></i>About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to posts_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-plane-departure"></i>投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus"></i>新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt"></i>ログイン
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>