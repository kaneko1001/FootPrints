<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-8 col-md-8 col-sm-12 round shadow-lg mx-auto">
      <h2 class="text-dark bg-light rounded-top py-4 mb-0 text-center">新規投稿</h2>
      <div class="form-body p-4 bg-white rounded-bottom">
        <%= form_with model: @post do |f| %>
          <div class="form-group">
            <%= f.label "旅行名" %>
            <span class="required">必須</span>
            <%= f.text_field :title, class: "form-control", placeholder: "〇〇旅行" %>
          </div>
          <div class="form-group">
            <%= f.label "内容や感想" %>
            <span class="any">任意</span>
            <%= f.text_area :content, class: "form-control", placeholder: "〇〇旅行", rows: 6 %>
          </div>
          <div class="form-group">
            <%= f.label "旅行日程" %>
            <span class="any">任意</span>
            <div class="row">
              <div class="col">
                <%= f.label "出発日" %>
                <%= f.date_field :departure_date, class: "form-control" %>
              </div>
              <div class="col">
                <%= f.label "帰国日" %>
                <%= f.date_field :return_date, class: "form-control" %>
              </div>
            </div>
            <p>登録すると旅行日数が集計されます</p>
          </div>
          <div class="form-group">
            <%= f.label "写真を投稿" %>
            <div class="mt-2"><%= f.file_field :images, accept: "image/*", multiple: true %></div>
          </div>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>