<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-lg px-3 py-3 text-center">
        <h2>投稿詳細</h2>
      </div>
      <div class="card shadow-lg px-3 py-3">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-12 col-lg-8">
              <h5><%= @post.title %></h5>
              <div class="row">
                <div class="col-8">
                  <p>
                    <i class="far fa-calendar-alt"></i>
                    <%= @post.trip_duration[:days] %>日間
                    <%= @post.formatted_departure_date %> から <%= @post.formatted_return_date %>
                  </p>
                </div>
                <div class="col-9">
                  <div class="row">
                    <div class="col-3">
                      <% if current_customer.favorited_by?(@post) %>
                        <%= link_to "<i class='fa-solid fa-heart' style='color: #787878;'></i>いいね".html_safe, post_favorites_path(@post), method: :delete %>
                      <% else %>
                        <%= link_to "<i class='fa-solid fa-heart' style='color: #f70838;'></i> いいね".html_safe, post_favorites_path(@post), method: :post %>
                      <% end %>
                    </div>
                    <div class="col-6">
                      <% if current_customer == @post.customer %>
                        <%= link_to "旅行を編集", edit_post_path(@post), class: "btn btn-primary" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <% if @post.images.attached? %>
          <% @post.images.each do |image| %>
            <div class="col-4" style="padding-top: 10px; padding-bottom: 10px;">
              <%= image_tag image, width: 300, height: 200 %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to '戻る', customer_path(current_customer), class: "btn btn-outline-dark mt-5" %>
</div>