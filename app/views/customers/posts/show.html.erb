<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-lg px-3 py-3 text-center">
        <h2>投稿詳細</h2>
      </div>
      <div class="card shadow-lg px-3 py-3">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-12 col-lg-8">
              <h5><%= @post.title %></h5>
              <div class="row">
                <div class="col-8">
                  <p>
                    <i class="far fa-calendar-alt"></i>
                    <%= @post.trip_duration[:days] %>日間
                    <%= @post.formatted_departure_date %> から <%= @post.formatted_return_date %>
                  </p>
                </div>
                <div class="col-12">
                  <%= @post.content %>
                </div>
                <div class="col-12">
                  <% if current_customer.favorited_by?(@post) %>
                    <%= link_to "いいね解除", post_favorites_path(@post), method: :delete %>
                  <% else %>
                    <%= link_to "いいね", post_favorites_path(@post), method: :post %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <% if @post.image.attached? %>
          <%= image_tag @post.image.variant(resize_to_limit: [300, 300]), class: "d-block mx-auto mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>