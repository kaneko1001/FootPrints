<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-9 mx-auto">
      <div class="card shadow-lg px-3 py-3">
        <h2 class="col-lg-4 col-md-7 col-sm-12 text-center">気になる人をフォロー</h2>
        <h5 class="col-lg-4 col-md-7 col-sm-12 text-center">あとで考える</h5>
      </div>
      <div class="card shadow-lg px-3 py-3">
        <% @customer.each do |customer| %>
          <% unless customer == current_customer %>
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-2">
                    <p>ユーザーimg(仮)</p>
                  </div>
                  <div class="col-8">
                    <h5><%= customer.name %></h5>
                    <p><%= customer.introduction %></p>
                  </div>
                  <div class="col-2 d-flex align-items-center">
                    <% if current_customer.following?(customer) %>
                      <%= link_to "フォロー中", customer_relationships_path(customer.id), method: :delete %>
                    <% else %>
                      <%= link_to "フォロー", customer_relationships_path(customer.id), method: :post %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>