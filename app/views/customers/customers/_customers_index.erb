<div class="card">
  <div class="card-body">
    <div class="profile-image">
      <%= link_to image_tag(customer.get_profile_image(120, 120)), customer_path(customer) %>
    </div>
    <div class="col-lg-8 col-md-6 col-8">
      <h5><%= link_to customer.name, customer_path(customer) %></h5>
      <% if customer.introduction.present? %>
        <p><%= customer.introduction %></p>
      <% else %>
        <p>自己紹介文はありません</p>
      <% end %>
    </div>
    <div class="follow-button col-lg-2 col-md-3 col-12">
      <% if current_customer.following?(customer) %>
        <%= link_to "フォロー中", customer_relationships_path(customer.id), class:"btn btn-sm btn-primary", method: :delete %>
      <% else %>
        <%= link_to "フォロー", customer_relationships_path(customer.id), class:"btn btn-sm btn-success", method: :post %>
      <% end %>
    </div>
  </div>
</div>

<style>
  .card {
    margin-bottom: 20px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #fff;
  }

  .card-body {
    display: flex;
    flex-direction: row;
  }

  .card-body h5 {
    margin-top: 0;
    margin-bottom: 10px;
  }

  .card-body p {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .card-body .profile-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20px;
  }

  .card-body .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .follow-button {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
</style>