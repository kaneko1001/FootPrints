<div class="container">
  <div class="row">
    <% if customer_signed_in? %>
      <div class="col-lg-3 mx-auto">
        <%= render 'layouts/public_sidebar' %>
      </div>
      <div class='col-lg-9 mx-auto'>
        <div class="card shadow-lg py-3">
          <div class="px-3">
            <h2 class="headline text-center col-lg-6 col-md-7 col-sm-12">トピック</h2>
          </div>
          <div class="col-lg-8 col-md-11 col-sm-12 mx-auto">
            <%= render 'public/posts/index', posts: @posts %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mx-auto col-12 mt-5 pt-3">
        <div class="text-center">
          <h1>ようこそ<strong>FootStanps</strong>&nbsp;へ！</h1>
          <p><b>旅の一推しポイントをSNSで発信し</b>&nbsp;</p>
          <p><b>みなさまの旅をより充実させるのにお役立てください！</b></p>
        </div>
      </div>
      <div class="mx-auto col-10 col-lg-6 mt-5">
        <div class-"btn-wrapper col-10 mx-auto">
          <div class="row">
          　<%= link_to 'ゲストログイン(未実装)', new_customer_session_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
          </div>
          <div class="row">
            <%= link_to 'ログイン', new_customer_session_path, class: "btn btn-info btn-sm btn-block mb-3" %>
          </div>
          <div class="row">
            <%= link_to '新規登録', new_customer_registration_path, class: "btn btn-success btn-sm btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
